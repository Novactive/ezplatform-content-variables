<a
    data-toggle="collapse"
    class="btn btn-primary content-variables-collapsable-collections"
    role="button"
    aria-expanded="{{ isCollapsed ? 'false' : 'true' }}"
    href="#{{ containerId }}"
    data-cookie-variable="{{ cookieVariable }}"
    data-cookie-separator="{{ cookieSeparator }}"
    data-item-id="{{ itemId }}"
>
    <svg class="ez-icon collapse-show"{% if not isCollapsed %} hidden{% endif %}>
        <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#caret-down"/>
    </svg>
    <svg class="ez-icon collapse-hide"{% if isCollapsed %} hidden{% endif %}>
        <use xlink:href="{{ asset('bundles/ezplatformadminui/img/ez-icons.svg') }}#caret-up"/>
    </svg>
</a>